let g:airline_powerline_fonts = 1
let g:spf13_bundle_groups=['general', 'programming', 'ruby', 'python', 'php', 'go', 'javascript', 'html', 'misc', 'writing', 'puppet']
let g:ansible_options = {'ignore_blank_lines': 0}

au BufRead,BufNewFile *.py,*.pyw set sw=4 ts=4 expandtab textwidth=79
au BufRead,BufNewFile *.md,*.rst set sw=4 ts=4 expandtab textwidth=79

au FileType gitcommit set tw=70
au BufRead,BufNewFile */COMMIT_EDITMSG set tw=70

com! FormatJSON %!python -m json.tool
